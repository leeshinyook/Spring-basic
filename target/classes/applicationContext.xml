<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="tv" class="com.springbook.biz.SamsungTV" init-method="initMethod" destroy-method="destroyMethod" scope="singleton">
		<property name="speaker" ref="sony"></property>
		<property name="price" value="27000000"></property>
	</bean>
	<bean id="sony" class="com.springbook.biz.SonySpeaker"></bean>
	<bean id="apple" class="com.springbook.biz.AppleSpeaker"></bean>
</beans>
